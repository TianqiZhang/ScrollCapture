{
  "manifest_version": 3,
  "name": "ScrollCapture",
  "version": "1.0",
  "description": "Advanced scrolling screenshot capture extension",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icon.svg"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["contentScript.js"]
  }]
}
